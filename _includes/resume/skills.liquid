<div class="list-groups">
  {% for content in data[1] %}
    <div class="list-group col-md-12" title="{{ content.level }}">
      <table class="table-cv list-group">
        <tbody>
          <tr>
            {% if content.icon %}
              <td class="list-group-category-icon">
                <i class="{{ content.icon }}"></i>
              </td>
            {% else %}
              <td class="list-group-category-icon"></td>
            {% endif %}
            <td class="list-group-category"><b>{{ content.name }}</b></td>
          </tr>
          {% if content.highlights %}
            <tr>
              <td></td>
              <td>
                <ul class="list-inline items ml-1 ml-md-4">
                  {% for item in content.highlights %}
                    <li class="list-inline-item">
                      <b><i class="fa fa-angle-right pr-1"></i>{{ item }}</b>
                    </li>
                  {% endfor %}
                </ul>
              </td>
            </tr>
          {% endif %}
        </tbody>
      </table>
    </div>
  {% endfor %}
</div>